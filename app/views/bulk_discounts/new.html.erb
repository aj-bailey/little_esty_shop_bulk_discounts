<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Items', merchant_items_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Invoices', merchant_invoices_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to "Bulk Discounts", merchant_bulk_discounts_path(@merchant), class: 'link_1', style: 'pull-right' %>
    </ul>
  </nav>
</div>

<div id="new_merchant_form">
  <%= form_with model: [@merchant, @bulk_discount], method: :post, local: true do |form| %>
    <p>
      <%= form.label :quantity_threshold, "Quantity Threshold (1+): " %>
      <%= form.text_field :quantity_threshold %>
      units
    </p>
    <p>
      <%= form.label :percentage_discount, "Percentage Discount (1-99): " %>
      <%= form.text_field :percentage_discount %>
      %
    </p>
    <p><%= form.submit "Add Discount" %></p>
  <% end %>
</div>