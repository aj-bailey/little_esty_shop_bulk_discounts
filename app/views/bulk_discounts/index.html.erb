<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Items', merchant_items_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Invoices', merchant_invoices_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to "Bulk Discounts", merchant_bulk_discounts_path(@merchant), class: 'link_1', style: 'pull-right' %>
    </ul>
  </nav>
</div>

<div class="table_container">
  <table> 
    <tr>
      <th> Bulk Discount ID </th>
      <th> Quantity Threshold </th>
      <th> Percentage Discount </th>
      <th> Discount Actions </th>
    </tr>
    <% @bulk_discounts.each do |discount| %>
      <tr>
        <div id = "bulk_discount-<%= discount.id %>">
          <td> <%= link_to "##{discount.id}", merchant_bulk_discount_path(@merchant, discount) %> </td>
          <td> <%= "#{discount.quantity_threshold} units" %> </td>
          <td> <%= "#{(discount.percentage_discount * 100).truncate }%"%> </td>
          <td> <%= button_to "Delete Discount", [@merchant, discount], method: :delete %> </td>
        </div>
      </tr>
    <%end%>
  </table>
</div>

<p><%= link_to "New Discount", new_merchant_bulk_discount_path(@merchant)%></p>